<div class="container">
  <div class="page-details"></div><br>
    <div class="header-text"><%= @category.category_title %></div>
      <button class="new-post">
        <%= link_to (new_category_post_path(@category)) do %>
         <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span>
        <% end %>
      </button>
     
      <!-- <button class="new-post"> -->
         
<!--       </button>
 -->    
    <br>
    <div class="post-tiles">
      <% if user_signed_in? %>
        <% @category.posts.each do |post| %><br>
          <% if current_user == post.user %>
            <div class="post-tile">
              <a href="<%= category_post_path(@category, post) %>" class="textWithBlurredBg"> 
                <%= image_tag post.image.url %>
                <h2><%= post.post_title%></h2>
              </a>
            </div>
          <%end%>
        <%end%>
      <%end%>
    </div>
  </div>
</div>