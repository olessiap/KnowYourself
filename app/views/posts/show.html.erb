<p> Posts show </p>

<h2> Post Title: <%= @post.post_title %> </h2>
<%= link_to image_tag(@post.image.url(:large)), @post.image.url %>
<p>Post Body: <%= @post.post_description %> </p>


<p class="date">
	<% if user_signed_in? && current_user == @post.user%>
	Submitted <%= time_ago_in_words(@post.created_at) %> ago 
	<%= link_to "Edit", "/categories/#{@category.id}/posts/#{@post.id}/edit" %> 
	<%= link_to 'Delete', category_post_path(@category, @post.id), :method => :delete %>

<% end %>