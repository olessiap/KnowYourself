<%= form_for :post, method: method, url: {controller: 'posts', action: action } do |f| %>
	<% if @post.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving </h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li> <%= msg %></li> 
				<% end %> 
			</ul>
		</div>
	<% end %>
	
	<div class="field">
	<%= f.label :post_title %><br>
	<%= f.file_field :image %> 
	</div>
	<div class="field">
	<%= f.label :post_title %> <br>
	<%= f.text_field :post_title %> 
	</div>
	<div class="field">
	<%= f.label :post_description %> <br>
	<%= f.text_field :post_description %> 
	</div>
	<div class="actions">
	<%= f.submit %>
	</div>
<% end %>